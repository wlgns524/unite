<!--                <item name="android:scaleY">.7</item>-->
<!--                <item name="android:transformPivotX">0dp</item>-->
<!--                <item name="android:transformPivotY">0dp</item>-->
        <item name="colorControlNormal">@color/color_fff9e2</item>
        <item name="colorControlActivated">@color/app_color</item>
    </style>
</resources>